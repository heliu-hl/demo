
.img_box {
  width: 80%;
  height: 280px;
  position: relative;
  margin: 30px auto;
}
.bg_img{
  width: 100%;
  height :100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index :-1;
}
.address_warp {
  display: flex;
  // align-items: center;
  padding: 50px 10px;
  justify-content: space-between;
  
}
.address_iten_warp{
  display: inline-block;
  text-align: center;
  }
.address_iten_warp Image{
    width: 70px;
    height: 70px;
    margin: 0 auto ;
}
.address_iten_warp View{
  width: 250rpx;
  font-size: 36rpx;
  color: #303030;
  color: #fff;
}
.wire_sty {
  width: 100px;
  height: 1px;
  border-top: 1px solid #fff;
  margin-top:90px;
}
.info_item{
  padding: 30px 80px 30px 80rpx;
  border-bottom:1px solid rgb(228, 224, 224); 
  display: flex;
  align-items: center;
}
.info_item>View:nth-of-type(1){
  font-size: 36px;
  color: rgb(99, 97, 97);
  flex: 1;
}
.info_item>View:nth-of-type(2){
  font-size: 36px;
  color: #303030;
  margin-right: 10px;
}
.seat_num{
  width: 600px;
  height 600px;
  border-radius: 50%;
  text-align: center;
  font-size: 400px;
  color: #fff;
  margin: 30px auto;
  background: #007bf9;
  line-height: 600px;
  font-weight: bolder;
}
.car_stop{
  width: 80%;
  font-size: 30px;
  color: orangered;
  text-align: center;
  margin: 0 auto;
}

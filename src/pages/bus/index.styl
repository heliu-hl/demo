.index {
  background-color: #F6F7FB;
  margin 0;
  padding 0;
  width 100%;
  height 100%
  display flex
  flex-direction column
}

.bus-list-item {
  margin-top 16px;
  background-color: #fff;
  width 100%;
  height 180px;
}

.bus-item-content {
  margin 0 auto;
  margin-top 32px;
  width 90%;
  padding-bottom 24px
}

.bus-time {
  display flex
  color #707070;
  font-size 28px;
}

.left {
  flex auto;
  text-align left;
  padding-left 36px;
  margin-right 10px;
}

.right {
  text-align left;
  flex auto;
  padding-left 36px;
  margin-left 10px;
}

.bus-info {
  display flex;
  color: #333
  font-size 30px;
  align-items center;
  justify-content space-between;
}

.bus-location {
  background-position-y center
  flex 1;
  background-repeat no-repeat
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
}

.bus-location-left {
  background-image url("../../assets/images/location.png")
  background-size 22px 26px;
}

.bus-destination-right {
  background-image url("../../assets/images/destination.png")
  background-size 24px 24px
}

.middle {
  display flex;
  flex-flow: column nowrap
  width: 140px;
}

.bus-site {
  text-align center
  color: #4279E6
  font-size 24px;
  border-bottom 1px solid #666
  padding 6px;
}

.bus-number {
  text-align center
  margin-top 6px
  font-size 24px;
}

.floating-bar {
  width: 100px;
  height:100px;
  border-radius 50%;
  background-color #4279E6
  color white;
  position fixed
  z-index 999
  bottom 60px
  right 36px
  text-align center
  line-height:100px
  font-size 34px
}
.scanQRCode_sty{
    width: 100px;
  height:100px;
  border-radius 50%;
  background-color #4279E6
  color white;
  position fixed
  z-index 999
  bottom 230px
  right 36px
  text-align center
  line-height:100px
  }

.car_type_list{
  display: flex;
  align-items: center;
  font-size: 28px;
  color: #303030;
}
.car_type_list View{
  padding: 20px 20px;
  width: 50%;
  text-align: center;
  }
.car_type_item{
  background: #129fab !important;
  color: #fff !important;
}




.bind-account {
  margin 0;
  padding 0;
  width 100%;
  height 100%;
  background-image url("../../../assets/images/bind-bg.jpg")
  background-repeat no-repeat
  background-size cover
}

.bind-head {
  width 100%;
  height 120px;
  line-height 120px;
  padding-top 180px;
  color: white;
  text-align center
}

.bind-head > image {
  margin-top -30px;
  width 120px;
  height 120px;
  vertical-align middle
}

.bind-head > text {
  margin-left 30px;
  font-weight normal;
  font-size 72px;
}

.round-corner {
  margin-left 8%
  margin-right 8%;
  flex 1
  height 116px;
  line-height 116px;
  color: white;
  font-size 36px;
  letter-spacing 2px;
  border-radius 58px
  background-color rgba(0, 0, 0, 0.5)
  margin-bottom:20px;
}

.top-margin-role{
  margin-top 84px;
}

.text-with-arrow {
  width 80%
  display inline-block
  background-image url("../../../assets/images/arrow-down.png")
  background-position right
  padding-left 58px;
  background-repeat no-repeat
  background-size 26px 16px
}

.input-container {
  font-size 36px;
  padding-left 58px;
  height 100%
  line-height 100%
}

.bind-button {
  flex 1
  margin-left: 6%
  margin-right 6%
  margin-top 90px;
  font-size 36px;
  color: #333
}

.error-view {
  margin-top 16px;
  margin-right 120px
  text-align center
  font-size: 32px;
  color: rgba(255, 0, 0, 0.7);
}
.tips{
  margin-top 20px;
  font-size 28px;
  color: #ffffff
  width 100%
  text-align center
}

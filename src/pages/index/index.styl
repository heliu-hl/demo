.banner {
  height: 320px;
  background-color: #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
  background-image: url('../../assets/images/15.jpg');
  background-repeat: no-repeat;
  background-size: 100%;
}

.users_info {
  width: 60%;
  height: 130px;
  background-color: rgba(255, 255, 255, .5);
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-radius: 10px;
  padding-left 30px;
}

.userinfo-avatar {
  width: 90px;
  height: 90px;
  display block
  border-radius: 50%;
  overflow: hidden;
}

.username {
  width: 50%;
  margin-left 30px;
  color: #513e18;
  display: flex;
  line-height 45px
  flex-direction column;
  .userinfo-nickname {
    font-weight 600;
    font-size 32px;
    font-weight bold;
  }
  .profile {
    font-size 26px;
  }
}

.bottom-empty {
  height: 50px;
  display block;
  width: 100%;
}

.at-grid__flex .at-grid-item__content-inner .content-inner__text {
  font-size: 26px;
  font-weight: 600;
}

.flex-center {
  text-align center;
}

.bind {
  width:80px;
  height 54px;
  position:relative;
  display:block;
  margin-left:auto;
  margin-right:auto;
  padding-left:4px;
  padding-right:4px;
  box-sizing:border-box;
  font-size:24px;
  text-align:center;
  text-decoration:none;
  line-height:2.55555556;
  -webkit-tap-highlight-color:transparent;
  overflow:hidden;
  color:#fff;
  background-color:#00c7a9;

}

.r-header{
    width: 750px;
    height: 104px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #7fc6e7;
}
.search-box{
    margin-left: 58px; 
    display: flex;
    align-items: center;
    position :relative;
}
.search-box .shortIcon{
    position: absolute;
    right :32px;
}
.search-box .s-input{
    width: 489px;
	height: 64px;
	background-color: #ffffff;
	border-radius: 32px;
    padding: 0;
    position: static;  
    font-family: PingFang-SC-Medium;
	font-size: 30px;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #d6d4d4;
    box-sizing: border-box;
    padding-left: 35px; 
}
.campusKinds{
    font-family: PingFang-SC-Medium;
	font-size: 30px;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ffffff;
    margin-right: 24px;
}
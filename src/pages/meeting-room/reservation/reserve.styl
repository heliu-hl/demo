.root {
  margin: 0
  padding: 0
  width: 100%;
  background-color white
  padding-bottom 10px
}

.container {
  width: 90%
  margin 0 auto
  color #333
}

.item-container {
  height 100px
  line-height 100px
  margin-top: 16px;
  display flex
  align-items center
}

.title {
  font-size 60px
  margin-bottom 48px;
  margin-top 30px
  padding-left 16px
}

.descName {
  width: 150px;
  text-align justify
  font-size 30px;
  height: 100%
  overflow hidden
}

.descName:after {
  display: inline-block;
  content: '';
  padding-left: 100%;
}

.picker {
  flex auto
}

.round-corner {
  height 100px
  line-height 100px
  background-color #F6F6F6
  letter-spacing 2px;
  font-size 36px;
  border-radius 10px;
  padding-left 16px
  flex auto
}

.input-container {
  height 100%
  line-height 100%
}

.text-with-arrow {
  width 92%
  display inline-block
  background-image url("../../../assets/images/arrow-down.png")
  background-position right
  background-repeat no-repeat
  background-size 26px 16px
}

.btn {
  background-color #3F8EE5
  margin-top 54px;
  color: white
  font-size 40px;
}

.error-view {
  margin-top 16px;
  margin-right 120px
  text-align center
  font-size: 32px;
  color: rgba(255, 0, 0, 0.7);
}

.area-container {
  margin-top: 16px;
  display flex
  align-items center
}
.switch-container {
  display: flex
  flex 1
  height 100%
  flex-direction row
}
.switch-hint {
  color: red
  font-size: 28px
  margin-right 8px
}
.item-switch{
  height 100px
  margin-top: 16px;
  display flex
  align-items center
}
.check-info{
  color: red;
  font-size: 26px;
  margin-top: 10px;  
}
.isCompany{
  width: 330px;  
}

.root {
  margin 0;
  padding 0;
  width 100%;
  height: 100%;
  color #2a2a2a
  background-color white
  font-size 32px;
}

.header-img {
  width: 100%;
  height: 32%;
}

.input-container {
  width 92%
  margin 0 auto
}

.input-cell {
  margin-top 56px;
}

.input-style {
  margin-top 30px;
  background-color #F9F9F9
  border-radius 8px;
  height 80px;
  line-height 80px;
}
.error-view {
  width 92%
  margin 16px auto
  text-align center
  font-size: 32px;
  color: rgba(255, 0, 0, 0.7);
}

.button {
  background-color #3F8EE5;
  color white;
  width 92%
  margin 80px auto
  font-size 36px;
}
